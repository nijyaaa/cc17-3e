<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F2F2F2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dashboard"
        android:textSize="25sp"
        tools:ignore="RelativeOverlap" />

    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/coffee"
        android:scaleType="fitXY"
        android:src="@drawable/coffee"
        android:contentDescription="@string/coffee_shops" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="67dp"
        android:layout_toStartOf="@id/imageButton1"
        android:background="@drawable/resto"
        android:contentDescription="@string/restaurants"
        android:scaleType="fitXY"
        android:src="@drawable/resto" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="67dp"
        android:layout_marginTop="50dp"
        android:layout_toEndOf="@id/imageButton1"
        android:background="@drawable/touristspot"
        android:scaleType="fitXY"
        android:src="@drawable/touristspot"
        android:contentDescription="@string/spots" />

</RelativeLayout>
